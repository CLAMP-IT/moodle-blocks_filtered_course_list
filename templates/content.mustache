{{!
    @template block_filtered_course_list/content

    Template to define Filtered course list block content

    Classes required for JS:
    * block-fcl__content

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * instid - string: id of the containing block
    * rubrics - array: the rubrics to display in the block content

    Example context (json):
    {
        "instid": "17",
        "rubrics": [
            {
                "state": "expanded",
                "exp": "true",
                "slct": "false",
                "label": "Current courses",
                "hidden": "false",
                "instid": "17",
                "key": "1",
                "items": [
                    {
                        "classes": "block-fcl__list__item block-fcl__list__item--course",
                        "displaytext": "Link to a course, category, etc.",
                        "linkclasses": "block-fcl__list__link",
                        "title": "Text to display on hover",
                        "url": "/course/index.php"
                    },
                    {
                        "classes": "block-fcl__list__item block-fcl__list__item--course",
                        "displaytext": "Another link to a course, category, etc.",
                        "linkclasses": "block-fcl__list__link",
                        "title": "Text to display on hover",
                        "url": "/course/index.php"
                    }
                ]
            },
            {
                "state": "expanded",
                "exp": "true",
                "slct": "false",
                "label": "Past courses",
                "hidden": "false",
                "instid": "17",
                "key": "2",
                "items": [
                    {
                        "classes": "block-fcl__list__item block-fcl__list__item--course",
                        "displaytext": "Link to a course, category, etc.",
                        "linkclasses": "block-fcl__list__link",
                        "title": "Text to display on hover",
                        "url": "/course/index.php"
                    },
                    {
                        "classes": "block-fcl__list__item block-fcl__list__item--course",
                        "displaytext": "Another link to a course, category, etc.",
                        "linkclasses": "block-fcl__list__link",
                        "title": "Text to display on hover",
                        "url": "/course/index.php"
                    }
                ]
            }
        ]
    }
}}
<div id="fcl_{{ instid }}_content" class="tablist block-fcl__content" role="tablist" aria-multiselectable="true">
    {{# rubrics }}
        {{> block_filtered_course_list/rubric }}
    {{/ rubrics }}
</div>
{{#js}}
require(['jquery', 'block_filtered_course_list/accordion'], function($, accordion) {
    accordion.init({"blockid": "fcl_{{ instid }}_content"});
});
{{/js}}

{{=<% %>=}}
<ion-item-divider>
    <h2>{{ 'plugin.block_filtered_course_list.pluginname' | translate }}</h2>
</ion-item-divider>
<div class="accordion">
  <ul>
	<li *ngFor="let rubric of CONTENT_OTHERDATA.rubrics">
		<a href="#" class="acc-handle" tabindex="0">{{ rubric.title }}</a>
		<div class="acc-panel">
			<ion-card *ngFor="let course of rubric.courses">
				<core-courses-course-list-item [course]="course"></core-courses-course-list-item>
			</ion-card>
		</div>
	</li>
  </ul>
</div>
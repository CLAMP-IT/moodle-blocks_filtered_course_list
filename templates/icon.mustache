{{!
    @template block_filtered_course_list/icon

    This template renders the icon for a list item.

    Example context (json):
    {
        "id": 3,
        "isfavourite": true,
        "icon": "fa-star",
        "title": "Starred course"
    }
}}
<span data-region="icon" data-course-id="{{ id }}">
    <span class="fcl-icon icon fa {{ icon }}"></span>
    <span class="fcl-sr-text sr-only">{{ title }}</span>
</span>
